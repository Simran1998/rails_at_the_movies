<h1>Home#index</h1>
<div class="columns">
  <div class="column">
    <h2 clas="title is-2">Top 10 Movies</h2>
    <ol class="ml-5">
      <% @movies.each do |movie| %>
      <li>
        <%= link_to movie.title, movie %>
        <em>(<%= movie.production_company.name%>)</em>
      </li>
      <% end %>
    </ol>
    <h6 class="title is-4"><%= link_to 'Top Movies from IMDB', movies_path %></h6>
  </div>
  <div class="column">
    <h2 class="title is-2">Top 10 Production Companies</h2>
    <ol>
      <% @production_companies.each do |production_company| %>
       <li><%= link_to production_company.name, production_company %></li>
      <% end %>
    </ol>
    <h6 class="title is-4"><%= link_to 'Top Movie Producers', production_companies_path %></h6>

  </div>
</div>

