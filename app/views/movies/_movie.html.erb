<h1 class="mt-6"><%= movie.title %></h1>

<progress class="progress is-info" value="<%= movie.average_vote %>" max=10>
  <%= movie.average_vote %>
</progress>

<article class="message is-dark">
  <div class="message-header">
    <p>Description</p>
  </div>
  <div class="message-body">
    <%= movie.description %>
  </div>
</article>

<p>
  <strong>Rating: </strong>
  <%= movie.average_vote %>
</p>
<p>
  <strong>
    Release Year:
  </strong>
  <%= movie.year %>
</p>
<p>
  <strong>Duration</strong>
  <%= movie.duration %> minutes
</p>

<p>
  <strong>
    Production Company:
  </strong>
  <%= link_to movie.production_company.name, movie.production_company %>
</p>
<hr>
